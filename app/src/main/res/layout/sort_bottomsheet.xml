<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    >
    <TextView
        android:id="@+id/sort_priority"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_priority_high_black_24dp"
        android:drawableStart="@drawable/ic_priority_high_black_24dp"
        android:text="@string/sort_priority"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ActionItem"
        />

    <TextView
        android:id="@+id/sort_date"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_update_black_24dp"
        android:drawableLeft="@drawable/ic_update_black_24dp"
        android:text="@string/sort_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_priority" />

</androidx.constraintlayout.widget.ConstraintLayout>